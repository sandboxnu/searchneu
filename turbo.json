{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "DATABASE_URL",
        "CRON_SECRET",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_VERIFY_SID",
        "TWILIO_PHONE_NUMBER",
        "JWT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "FLAGS_SECRET"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "./dist/**"]
    },
    "dev": {
      "env": [
        "DATABASE_URL",
        "CRON_SECRET",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_VERIFY_SID",
        "TWILIO_PHONE_NUMBER",
        "JWT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "FLAGS_SECRET"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "persistent": true,
      "cache": false
    },
    "test": {
      "env": [
        "DATABASE_URL",
        "CRON_SECRET",
        "TWILIO_ACCOUNT_SID",
        "TWILIO_AUTH_TOKEN",
        "TWILIO_VERIFY_SID",
        "TWILIO_PHONE_NUMBER",
        "JWT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "FLAGS_SECRET"
      ],
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "db:generate": {
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "db:migrate": {
      "env": ["DATABASE_URL"],
      "cache": false
    },
    "db:push": {
      "env": ["DATABASE_URL"],
      "cache": false,
      "persistent": true
    },
    "db:studio": {
      "env": ["DATABASE_URL"],
      "cache": false,
      "persistent": true
    }
  }
}

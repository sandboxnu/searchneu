{
  "name": "@sneu/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "exports": {
    "./neon": {
      "types": "./dist/neon.d.ts",
      "default": "./dist/neon.js"
    },
    "./pg": {
      "types": "./dist/pg.d.ts",
      "default": "./dist/pg.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "default": "./dist/schema/index.js"
    }
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "drizzle-orm": "^0.45.1",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@sneu/eslint-config": "workspace:*",
    "@sneu/tsconfig": "workspace:*",
    "@types/node": "^25.2.1",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3"
  }
}
